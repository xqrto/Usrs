@echo off
setlocal enabledelayedexpansion

REM Desktop-Pfad ermitteln
set "desktop=%USERPROFILE%\Desktop"

REM Schleife von 1 bis 100
for /L %%i in (1,1,100) do (
    REM führende Null für Zahlen < 10
    if %%i LSS 10 (
        set "num=0%%i"
    ) else (
        set "num=%%i"
    )

    REM Datei erstellen und Text schreiben
    echo Moje > "%desktop%\!num!.txt"
)

echo Fertig! 100 Dateien wurden auf dem Desktop erstellt.
pause